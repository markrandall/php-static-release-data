  <announcements>
    <announcement lang="en">The PHP development team announces the immediate availability of PHP 7.2.2. This is a bugfix release, with several bug fixes included.</announcement>
  </announcements>
  <tags/>
  <changes>
    <module id="Core">
      <change>
        <description>(potential memleak in internal classes's static members).</description>
        <references>
          <reference type="bugfix">75742</reference>
        </references>
      </change>
      <change>
        <description>(Path 260 character problem).</description>
        <references>
          <reference type="bugfix">75679</reference>
        </references>
      </change>
      <change>
        <description>(Some non-portable == in shell scripts).</description>
        <references>
          <reference type="bugfix">75614</reference>
        </references>
      </change>
      <change>
        <description>(segfault when using spread operator on generator passed by reference).</description>
        <references>
          <reference type="bugfix">75786</reference>
        </references>
      </change>
      <change>
        <description>(arg of get_defined_functions is optional).</description>
        <references>
          <reference type="bugfix">75799</reference>
        </references>
      </change>
      <change>
        <description>(Exit inside generator finally results in fatal error).</description>
        <references>
          <reference type="bugfix">75396</reference>
        </references>
      </change>
    </module>
    <module id="FCGI">
      <change>
        <description>(getenv() crashes on Windows 7.2.1 when second parameter is false).</description>
        <references>
          <reference type="bugfix">75794</reference>
        </references>
      </change>
    </module>
    <module id="IMAP">
      <change>
        <description>(imap_append HeapCorruction).</description>
        <references>
          <reference type="bugfix">75774</reference>
        </references>
      </change>
    </module>
    <module id="Opcache">
      <change>
        <description>(File cache not populated after SHM runs full).</description>
        <references>
          <reference type="bugfix">75720</reference>
        </references>
      </change>
      <change>
        <description>(var 8 (TMP) has array key type but not value type).</description>
        <references>
          <reference type="bugfix">75687</reference>
        </references>
      </change>
      <change>
        <description>(Using @ crashes php7.2-fpm).</description>
        <references>
          <reference type="bugfix">75698</reference>
        </references>
      </change>
      <change>
        <description>(Interned strings buffer overflow may cause crash).</description>
        <references>
          <reference type="bugfix">75579</reference>
        </references>
      </change>
    </module>
    <module id="PDO">
      <change>
        <description>(PDO extension doesn't allow to be built shared on Darwin).</description>
        <references>
          <reference type="bugfix">75616</reference>
        </references>
      </change>
    </module>
    <module id="PDO MySQL">
      <change>
        <description>(PDO Mysql module can't be built as module).</description>
        <references>
          <reference type="bugfix">75615</reference>
        </references>
      </change>
    </module>
    <module id="PGSQL">
      <change>
        <description>(pg_version() crashes when called on a connection to cockroach).</description>
        <references>
          <reference type="bugfix">75671</reference>
        </references>
      </change>
    </module>
    <module id="Readline">
      <change>
        <description>(readline_read_history segfaults with empty file).</description>
        <references>
          <reference type="bugfix">75775</reference>
        </references>
      </change>
    </module>
    <module id="SAPI">
      <change>
        <description>([embed SAPI] Segmentation fault in sapi_register_post_entry).</description>
        <references>
          <reference type="bugfix">75735</reference>
        </references>
      </change>
    </module>
    <module id="SOAP">
      <change>
        <description>(SoapClient generates E_ERROR even if exceptions=1 is used).</description>
        <references>
          <reference type="bugfix">70469</reference>
        </references>
      </change>
      <change>
        <description>(Segmentation fault in zend_string_release).</description>
        <references>
          <reference type="bugfix">75502</reference>
        </references>
      </change>
    </module>
    <module id="SPL">
      <change>
        <description>(RecursiveArrayIterator does not traverse arrays by reference).</description>
        <references>
          <reference type="bugfix">75717</reference>
        </references>
      </change>
      <change>
        <description>(RecursiveArrayIterator doesn't have constants from parent class).</description>
        <references>
          <reference type="bugfix">75242</reference>
        </references>
      </change>
      <change>
        <description>(RecursiveArrayIterator does not iterate object properties).</description>
        <references>
          <reference type="bugfix">73209</reference>
        </references>
      </change>
    </module>
    <module id="Standard">
      <change>
        <description>(substr_count incorrect result).</description>
        <references>
          <reference type="bugfix">75781</reference>
        </references>
      </change>
      <change>
        <description>(array_values don't work on empty array).</description>
        <references>
          <reference type="bugfix">75653</reference>
        </references>
      </change>
    </module>
    <module id="Zip">
      <change>
        <description>Display headers (buildtime) and library (runtime) versions in phpinfo (with libzip &gt;= 1.3.1).</description>
        <references/>
      </change>
    </module>
  </changes>
</release>
