<?xml version="1.0"?>
<release version="1" id="7.3.8">
  <release>7.3.8</release>
  <date>01 Aug 2019</date>
  <sources>
    <source>
      <name>PHP 7.3.8 (tar.bz2)</name>
      <filename>php-7.3.8.tar.bz2</filename>
      <date>01 Aug 2019</date>
