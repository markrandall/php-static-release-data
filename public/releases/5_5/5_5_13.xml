<?xml version="1.0"?>
<release version="1" id="5.5.13">
  <release>5.5.13</release>
  <date>29 May 2014</date>
  <sources>
    <source>
      <name>PHP 5.5.13 (tar.bz2)</name>
      <filename>php-5.5.13.tar.bz2</filename>
