    <modules>
      <module id="core">
        <change>
          <description>(Wrong TSRM usage in zend_register_class alias).</description>
          <references>
            <reference type="bugfix">64099</reference>
          </references>
        </change>
        <change>
          <description>(get_html_translation_table() output incomplete with HTML_ENTITIES and ISO-8859-1).</description>
          <references>
            <reference type="bugfix">64011</reference>
          </references>
        </change>
        <change>
          <description>(isset() inconsistently produces a fatal error on protected property).</description>
          <references>
            <reference type="bugfix">63982</reference>
          </references>
        </change>
        <change>
          <description>(Bad warning text from strpos() on empty needle).</description>
          <references>
            <reference type="bugfix">63943</reference>
          </references>
        </change>
        <change>
          <description>(Use after scope error in zend_compile).</description>
          <references>
            <reference type="bugfix">63899</reference>
          </references>
        </change>
        <change>
          <description>(Poor efficiency of strtr() using array with keys of very different length).</description>
          <references>
            <reference type="bugfix">63893</reference>
          </references>
        </change>
        <change>
          <description>(zend_std_compare_objects crash on recursion).</description>
          <references>
            <reference type="bugfix">63882</reference>
          </references>
        </change>
        <change>
          <description>(Magic methods called twice for unset protected properties).</description>
          <references>
            <reference type="bugfix">63462</reference>
          </references>
        </change>
        <change>
          <description>(fopen follows redirects for non-3xx statuses).</description>
          <references>
            <reference type="bugfix">62524</reference>
          </references>
        </change>
        <change>
          <description>Support BITMAPV5HEADER in getimagesize().</description>
          <references/>
