<?xml version="1.0"?>
<release version="5.4.11">
  <version>5.4.11</version>
  <date>2013-01-17</date>
  <sources>
    <source>
      <name>PHP 5.4.11 (tar.bz2)</name>
      <filename>php-5.4.11.tar.bz2</filename>
